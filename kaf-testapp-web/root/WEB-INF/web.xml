<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>test-app-web</display-name>
	<display-name>测试应用平台</display-name>
	<welcome-file-list>
		<welcome-file>toindex.jsp</welcome-file>
	</welcome-file-list>
	<filter>
		<filter-name>SessionFilter</filter-name>
		<filter-class>kitty.kaf.session.CookiedSessionFilter</filter-class>
		<init-param>
			<param-name>memcached-configname</param-name>
			<param-value>session</param-value>
		</init-param>
		<init-param>
			<param-name>session-class</param-name>
			<param-value>kitty.testapp.inf.web.WebSession</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>SessionFilter</filter-name>
		<url-pattern>*.go</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>SessionFilter</filter-name>
		<servlet-name>WebServlet</servlet-name>
	</filter-mapping>
	<filter-mapping>
		<filter-name>SessionFilter</filter-name>
		<servlet-name>FileServlet</servlet-name>
	</filter-mapping>
	<servlet>
		<servlet-name>WebServlet</servlet-name>
		<servlet-class>kitty.kaf.trade.web.WebServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>WebServlet</servlet-name>
		<url-pattern>/webtrade</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>WebControlServlet</servlet-name>
		<servlet-class>kitty.kaf.webframe.ControlServlet</servlet-class>
		<init-param>
			<param-name>executor-class</param-name>
			<param-value>kitty.testapp.inf.web.WebControlServletExecutor</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>WebControlServlet</servlet-name>
		<url-pattern>*.go</url-pattern>
	</servlet-mapping>
	<listener>
		<listener-class>kitty.testapp.inf.web.WebContextListener</listener-class>
	</listener>
	<servlet>
		<servlet-name>VerifyCodeServlet</servlet-name>
		<servlet-class>kitty.testapp.inf.web.VerifyCodeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>VerifyCodeServlet</servlet-name>
		<url-pattern>/verifyCodeImage</url-pattern>
	</servlet-mapping>
	<filter-mapping>
		<filter-name>SessionFilter</filter-name>
		<servlet-name>VerifyCodeServlet</servlet-name>
	</filter-mapping>
</web-app>